<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_buttonPrimary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_buttonSecondary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_outlined_blue</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="desc_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tittle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeableImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>