<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="77dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="10dp">

    <ImageButton
        android:id="@+id/ib_menu"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/button_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_healthicons_i_training_class"
        android:clickable="false"/>

    <TextView
        android:id="@+id/tv_titleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:textColor="@color/black_text_1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/ib_menu"
        app:layout_constraintStart_toStartOf="@+id/ib_menu"
        app:layout_constraintTop_toBottomOf="@+id/ib_menu"
        tools:text="Jenis\nPembelajaran" />
</androidx.constraintlayout.widget.ConstraintLayout>