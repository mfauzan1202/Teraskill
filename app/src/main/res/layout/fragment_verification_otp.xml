<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.otp.VerificationOTPFragment">

    <TextView
        android:id="@+id/tv_account_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="62dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Verifikasi Akun"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_desc_account_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Masukkan kode verifikasi yang dikirim ke\nemail anda"
        android:textColor="@color/gray_text_2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_account_verification"
        app:layout_constraintTop_toBottomOf="@id/tv_account_verification" />

    <EditText
        android:id="@+id/et_otp1"
        android:layout_width="42dp"
        android:layout_height="64dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_textinput"
        android:cursorVisible="false"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/et_otp2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_account_verification"
        tools:hint="1" />

    <EditText
        android:id="@+id/et_otp2"
        android:layout_width="42dp"
        android:layout_height="64dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_textinput"
        android:cursorVisible="false"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/et_otp3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_otp1"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_account_verification"
        tools:hint="1" />

    <EditText
        android:id="@+id/et_otp3"
        android:layout_width="42dp"
        android:layout_height="64dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_textinput"
        android:cursorVisible="false"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/et_otp4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_otp2"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_account_verification"
        tools:hint="1" />

    <EditText
        android:id="@+id/et_otp4"
        android:layout_width="42dp"
        android:layout_height="64dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_textinput"
        android:cursorVisible="false"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/et_otp5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_otp3"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_account_verification"
        tools:hint="1" />


    <EditText
        android:id="@+id/et_otp5"
        android:layout_width="42dp"
        android:layout_height="64dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_textinput"
        android:cursorVisible="false"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/et_otp6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_otp4"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_account_verification"
        tools:hint="1" />

    <EditText
        android:id="@+id/et_otp6"
        android:layout_width="42dp"
        android:layout_height="64dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/bg_textinput"
        android:cursorVisible="false"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_otp5"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_account_verification"
        tools:hint="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verif"
        style="@style/style_buttonPrimary"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Verifikasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_otp1" />

    <TextView
        android:id="@+id/tv_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter"
        android:text="Tidak menerima Kode OTP?"
        android:textAlignment="center"
        android:textColor="@color/gray_text_2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_verif" />

    <TextView
        android:id="@+id/tv_resend_otp_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/inter"
        android:textAlignment="center"
        android:textColor="@color/gray_text_2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_resend_otp"
        tools:text="@string/format_otp_timer" />

    <include
        android:id="@+id/dialog_bubble_error"
        layout="@layout/dialog_bubble_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/btn_verif"
        app:layout_constraintStart_toStartOf="@id/btn_verif"
        app:layout_constraintTop_toBottomOf="@id/btn_verif" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>