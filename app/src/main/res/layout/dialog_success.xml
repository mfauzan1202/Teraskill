<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_ilustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="46dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emoticon" />

    <TextView
        android:id="@+id/tv_dialogTitle"
        style="@style/title_text"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_bold"
        android:text="Berhasil!"
        android:textColor="@color/success_color"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ilustration" />

    <TextView
        android:id="@+id/tv_dialogMessage"
        style="@style/desc_text"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginHorizontal="26dp"
        android:text="Link <b>Grup Webinar</b>  telah dikirimkan ke email anda"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialogTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_done"
        style="@style/style_buttonPrimary"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_green"
        android:fontFamily="@font/inter"
        android:paddingVertical="12dp"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialogMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>