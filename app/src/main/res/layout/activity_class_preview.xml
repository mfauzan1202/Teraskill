<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".ui.classroom.ClassPreviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/applyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="32dp"
            android:background="@null"
            android:src="@drawable/ic_arrow_back_black"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_classTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:text="Figma 101" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/group_1863" />

            <TextView
                android:id="@+id/tv_totalModule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="@string/total_modul"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_assignment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                app:startIconDrawable="@drawable/ic_play_arrow" />

            <TextView
                android:id="@+id/tv_totalVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center|center_horizontal"
                android:text="@string/total_video"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_play_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_totalModule"
                app:srcCompat="@drawable/mask_group"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@+id/imageView8"
                app:srcCompat="@drawable/ic_groups"
                tools:layout_editor_absoluteX="362dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="322dp"
                android:layout_height="53dp"
                android:text="Bergabung dengan teman-teman dan mentor untuk berdiskusi bareng"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_batal"
                android:layout_width="178dp"
                android:layout_height="41dp"
                android:background="@drawable/button_outlined_blue"
                android:backgroundTint="@color/background_color"
                android:fontFamily="@font/inter_medium"
                android:text="Join Group Konsultasi"
                android:textAllCaps="false"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />


            <ImageView
                android:id="@+id/iv_profileMentor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/editrounded"
                app:layout_constraintBottom_toBottomOf="@id/tv_jobDivision"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />

            <TextView
                android:id="@+id/tv_profilMentor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/inter"
                android:text="Profil Mentor"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/iv_profileMentor"
                app:layout_constraintStart_toStartOf="@+id/iv_profileMentor"
                app:layout_constraintTop_toTopOf="@+id/iv_profileMentor" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profilePicture"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="@+id/iv_profileMentor"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/iv_profileMentor"
                app:layout_constraintTop_toBottomOf="@+id/tv_profilMentor"
                tools:src="@drawable/dummyprofilpic" />

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/inter_semibold"
                tools:text="Azroi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/iv_profileMentor"
                app:layout_constraintStart_toStartOf="@+id/iv_profileMentor"
                app:layout_constraintTop_toBottomOf="@+id/iv_profilePicture" />

            <TextView
                android:id="@+id/tv_jobDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter"
                tools:text="UI/UX DEsigner"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/iv_profileMentor"
                app:layout_constraintStart_toStartOf="@+id/iv_profileMentor"
                app:layout_constraintTop_toBottomOf="@+id/tv_user" />

            <ImageView
                android:id="@+id/iv_tentangKelas"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/editrounded"
                app:layout_constraintBottom_toBottomOf="@id/tv_classDesc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profileMentor" />

            <TextView
                android:id="@+id/tv_tentangKelas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/inter"
                android:text="Tentang Kelas"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/iv_tentangKelas"
                app:layout_constraintStart_toStartOf="@+id/iv_tentangKelas"
                app:layout_constraintTop_toTopOf="@+id/iv_tentangKelas" />

            <TextView
                android:id="@+id/tv_classDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Desc Tentang Kelas"
                app:layout_constraintEnd_toEndOf="@+id/tv_tentangKelas"
                app:layout_constraintStart_toStartOf="@+id/tv_tentangKelas"
                app:layout_constraintTop_toBottomOf="@+id/tv_tentangKelas" />

            <ImageView
                android:id="@+id/iv_spesifikasi_kk"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/editrounded"
                app:layout_constraintBottom_toBottomOf="@id/tv_desc_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_tentangKelas" />

            <TextView
                android:id="@+id/tv_spesifikasi_kk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/inter"
                android:text="Spesifikasi Kebutuhan Kelas"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/iv_spesifikasi_kk"
                app:layout_constraintStart_toStartOf="@+id/iv_spesifikasi_kk"
                app:layout_constraintTop_toTopOf="@+id/iv_spesifikasi_kk" />

            <TextView
                android:id="@+id/tv_desc_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Desc1"
                app:layout_constraintEnd_toEndOf="@+id/tv_spesifikasi_kk"
                app:layout_constraintStart_toStartOf="@+id/tv_spesifikasi_kk"
                app:layout_constraintTop_toBottomOf="@+id/tv_spesifikasi_kk" />

            <ImageView
                android:id="@+id/iv_list_materi"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/editrounded"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_spesifikasi_kk" />

            <TextView
                android:id="@+id/tv_listMateri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/inter"
                android:text="List Materi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/iv_list_materi"
                app:layout_constraintStart_toStartOf="@+id/iv_list_materi"
                app:layout_constraintTop_toTopOf="@+id/iv_list_materi" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_list_materi"
                app:layout_constraintEnd_toEndOf="@+id/tv_listMateri"
                app:layout_constraintStart_toStartOf="@+id/tv_listMateri"
                app:layout_constraintTop_toBottomOf="@+id/tv_listMateri"
                app:layout_constraintVertical_bias="0.0"
                tools:listitem="@layout/item_list_materi" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_class_review"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/line_blue"
                android:fontFamily="@font/inter_medium"
                android:hint="Review Kelas"
                android:textColor="@color/success_color"
                android:textColorHint="@color/primary_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_list_materi" />

            <ImageView
                android:id="@+id/iv_ujian_ak"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/editrounded"
                app:layout_constraintBottom_toTopOf="@+id/iv_sertifikat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_class_review" />

            <TextView
                android:id="@+id/tv_ujian_ak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/inter"
                android:text="Ujian Akhir Kelas"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_submit_assigment"
                app:layout_constraintEnd_toEndOf="@+id/iv_ujian_ak"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/iv_ujian_ak"
                app:layout_constraintTop_toTopOf="@+id/iv_ujian_ak" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit_assigment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/button_gray"
                android:fontFamily="@font/inter"
                android:hint="Pengumpulan penugasan proyek"
                android:padding="20dp"
                android:textAlignment="viewStart"
                android:textColorHint="@color/gray_text"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_group_1870"
                app:layout_constraintEnd_toEndOf="@+id/iv_ujian_ak"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/iv_ujian_ak"
                app:layout_constraintTop_toTopOf="@+id/iv_ujian_ak" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_quiz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_gray"
                android:fontFamily="@font/inter"
                android:hint="Kuis"
                android:padding="20dp"
                android:textAlignment="viewStart"
                android:textColorHint="@color/gray_text"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_group_1870"
                app:layout_constraintBottom_toBottomOf="@id/iv_ujian_ak"
                app:layout_constraintEnd_toEndOf="@+id/btn_submit_assigment"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/btn_submit_assigment"
                app:layout_constraintTop_toBottomOf="@+id/btn_submit_assigment" />

            <ImageView
                android:id="@+id/iv_sertifikat"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/editrounded"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_ujian_ak"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_sertifikat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/inter"
                android:text="Sertifikat"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/iv_sertifikat"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/iv_sertifikat"
                app:layout_constraintTop_toTopOf="@+id/iv_sertifikat" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sertifikat"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_gray"
                android:fontFamily="@font/inter"
                android:hint="Buka Sertifikat"
                android:textColorHint="@color/gray_text"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/note_sertifikat"
                app:layout_constraintEnd_toEndOf="@+id/tv_sertifikat"
                app:layout_constraintHorizontal_bias="0.213"
                app:layout_constraintStart_toBottomOf="@+id/tv_sertifikat"
                app:layout_constraintStart_toStartOf="@+id/tv_sertifikat"
                app:layout_constraintTop_toBottomOf="@+id/tv_sertifikat" />

            <TextView
                android:id="@+id/note_sertifikat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:text="Note: Sertifikat dapat di buka setelah mengisi review kelas serta ujian akhir telah diperiksa dan dinilai oleh mentor "
                android:textColor="@color/red"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/iv_sertifikat"
                app:layout_constraintEnd_toEndOf="@id/btn_sertifikat"
                app:layout_constraintStart_toStartOf="@id/btn_sertifikat"
                app:layout_constraintTop_toBottomOf="@id/btn_sertifikat" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>