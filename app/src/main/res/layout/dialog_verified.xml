<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_ilustration"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginHorizontal="46dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_2167" />

    <TextView
        android:id="@+id/tv_dialogTitle"
        style="@style/title_text"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="38dp"
        android:text="Akun telah terverifikasi"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ilustration" />

    <TextView
        android:id="@+id/tv_dialogMessage"
        android:layout_width="0dp"
        style="@style/desc_text"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="22dp"
        android:text="Data yang telah anda berikan tersimpan dan terlindungi dengan aman di dalam sistem teraskill"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialogTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_done"
        style="@style/style_buttonPrimary"
        android:textSize="14sp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="38dp"
        android:paddingVertical="12dp"
        android:text="Halaman Awal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialogMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>