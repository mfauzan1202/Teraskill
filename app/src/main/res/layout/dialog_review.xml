<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Berikan Reviewmu Untuk Kelas Ini"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_line_122"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_review" />

    <LinearLayout
        android:id="@+id/item_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_line">


        <ImageView
            android:id="@+id/ic_star_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_star_yellow" />

        <ImageView
            android:id="@+id/ic_star_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/ic_star_1"
            android:src="@drawable/ic_star_yellow" />

        <ImageView
            android:id="@+id/ic_star_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/ic_star_2"
            android:src="@drawable/ic_star_yellow" />

        <ImageView
            android:id="@+id/ic_star_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/ic_star_3"
            android:src="@drawable/ic_star_yellow" />

        <ImageView
            android:id="@+id/ic_star_5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/ic_star_4"
            android:src="@drawable/ic_star_yellow" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_review"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:hintEnabled="false"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_star">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Tuliskan Reviewmu...."
            android:gravity="top"
            android:background="@drawable/bg_textinput" />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/iv_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_line_122"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_review" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_batal"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/line_blue"
        android:fontFamily="@font/inter_medium"
        android:hint="Batal"
        android:textColor="@color/success_color"
        android:textColorHint="@color/primary_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_submit"
        app:layout_constraintEnd_toStartOf="@+id/btn_submit"
        app:layout_constraintTop_toTopOf="@+id/btn_submit" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_blue"
        android:fontFamily="@font/inter_medium"
        android:hint="Submit"
        android:textColor="@color/success_color"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_line2" />

</androidx.constraintlayout.widget.ConstraintLayout>