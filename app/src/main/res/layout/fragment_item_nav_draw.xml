<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    tools:context=".ui.classroom.ItemNavDrawFragment">

    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Fitur-fitur Figma"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_list_materi1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_gray"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="20dp"
        android:text="Pentool"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColorHint="@color/gray_text"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_list_materi2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_gray"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="20dp"
        android:text="Sizeing"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColorHint="@color/gray_text"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_list_materi1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_list_materi3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_gray"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="20dp"
        android:text="Frame"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColorHint="@color/gray_text"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_list_materi2" />

</androidx.constraintlayout.widget.ConstraintLayout>