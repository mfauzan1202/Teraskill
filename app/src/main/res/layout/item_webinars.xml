<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="165dp"
    android:layout_height="200dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="10dp"
    card_view:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/image_dummy"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_bold"
            android:lines="1"
            android:textColor="@color/black_text_1"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="How to Create De..."
            card_view:layout_constraintTop_toBottomOf="@+id/iv_item_image"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/item_date"
            android:layout_width="99dp"
            android:layout_height="21dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/inter_medium"
            android:text="Sabtu, 11 September"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="8.25dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/tv_item_name" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.21dp"
            android:src="@drawable/ic_line_122"
            card_view:layout_constraintTop_toBottomOf="@+id/item_date"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_totalVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8.21dp"
            android:gravity="center|center_horizontal"
            android:text="Zoom"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_zoom"
            android:drawablePadding="11dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/iv_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>